<component name="vncMarkupListItem" extends="Group">
	<script type="text/brightscript" uri="vncMarkupListItem.brs" />

	<interface>
		<field id="height" type="float" onChange="setHeight" />
		<field id="focusPercent" type="float" onChange="setFocusPercent" />
		<field id="itemContent" type="node" onChange="setItemContent" />
	</interface>

	<children>
		<Label vertAlign="center" visible="false">
			<Font role="font" uri="pkg:/fonts/fa-regular-400.ttf" />
		</Label>
		<Label vertAlign="center" visible="false">
			<Font role="font" uri="pkg:/fonts/fa-solid-900.ttf" />
		</Label>
		<Label vertAlign="center" font="font:MediumBoldSystemFont" />
	</children>
</component>
